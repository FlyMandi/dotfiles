# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "path_exists uni-qis"
order += "path_exists uk-edi"
order += "ethernet _first_"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "tztime date"
order += "tztime local"

path_exists uni-qis {
        path = "/proc/sys/net/ipv4/conf/wgtuk-Full-Arch"
}

path_exists uk-edi {
        path = "/proc/sys/net/ipv4/conf/uk-edi"
}

ethernet _first_ {
        format_up = "E: (%speed)"
        format_down = "E: down"
}

disk "/" {
        format = "free: %avail"
}

cpu_usage {
        format = "CPU: %usage"
}

memory {
        format = "MEM: %used/%available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime date {
        format = "%d.%m.%Y"
}

tztime local {
        format = "%H:%M:%S"
}
